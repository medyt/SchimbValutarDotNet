@{
    ViewData["Title"] = "Owner";
}

<section>
    <div class="container">
        <div class="col-md-12">
            <h5><span>Register</span> <br />new account</h5>
            <p>Complete the following form for registering a new user to the application:</p>
        </div>
        <div class="col-md-12">
            <form>
                <div class="form-group">
                    <label for="selectClient">Client:</label>
                    <select class="form-control" id="selectClient">
                        <option>Choose a type of count</option>
                        <option>Owner</option>
                        <option>Manager</option>
                        <option>Employee</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="name">First name:</label>
                    <input type="text" class="form-control" id="name">
                </div>
                <div class="form-group">
                    <label for="name">Last name:</label>
                    <input type="text" class="form-control" id="lname">
                </div>
                <div class="form-group">
                    <label for="name">CNP:</label>
                    <input type="text" class="form-control" id="cnp">
                </div>
                <div class="form-group">
                    <label for="name">Email:</label>
                    <input type="text" class="form-control" id="email">
                </div>
                <div class="form-group">
                    <label for="pwd">Password:</label>
                    <input type="password" class="form-control" id="pwd">
                </div>
                <button type="submit" class="btn btn-default" onclick="Add-Database">Register</button>
            </form>
        </div>
    </div>
</section>
